@using WebCarSell.Models;
@model ModelsListModel
@{
    ViewData["Title"] = "List";
}

<h1>All Announcements</h1>
<form method="get">
    <div>
        <label>Name</label>
        <input name="filtration" />
        <input type="submit" value="Filtering"/>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="ModelsList" asp-route-name="Name_Asc">Name</a>
                <a asp-action="ModelsList" asp-route-name="Name_Desc">Desc</a>
            </th>
            <th>Year</th>
             <th>
               <a asp-action="ModelsList" asp-route-name="Mileage_Asc">Mileage</a>
                <a asp-action="ModelsList" asp-route-name="Mileage_Desc">Desc</a>
            </th>
            <th>
                <a asp-action="ModelsList" asp-route-name="EngineVolume_Asc">Engine Volume</a>
                <a asp-action="ModelsList" asp-route-name="EngineVolume_Desc">Desc</a>
            </th>
            <th>Color</th>
            <th>
                <a asp-action="ModelsList" asp-route-name="Transmission_Asc">Transmission</a>
                <a asp-action="ModelsList" asp-route-name="Transmission_Desc">Desc</a>
            </th>
            <th>
                <a asp-action="ModelsList" asp-route-name="Drive_Asc">Drive</a>
                <a asp-action="ModelsList" asp-route-name="Drive_Desc">Desc</a>
            </th>
            <th>
                <a asp-action="ModelsList" asp-route-name="Price_Asc">Price</a>
                <a asp-action="ModelsList" asp-route-name="Price_Desc">Desc</a>
            </th>
            <th>Owner Phone</th>
            <th>Description</th>
            <th>Count of Modification</th>
            <th>Summary Price of modificarions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>        
@foreach (var item in Model.ViewModels) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine_Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transmission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountOfModifications)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummaryPriceOfModification)
            </td>
            @if(User.IsInRole("Admin"))
                {
                  <td>
                <a asp-action="DeleteModelByAdmin" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
                else
                {
                    <td style="display:none"></td>
                }

        </tr>
}
    </tbody>
</table>

