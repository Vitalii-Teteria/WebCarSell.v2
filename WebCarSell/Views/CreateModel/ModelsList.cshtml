@using WebCarSell.Models;
@addTagHelper *, WebCarSell
@model ModelsListModel
@{
    ViewData["Title"] = "List";
}

<h1>All Announcements</h1>
<form method="get">
    <div>
        <label>Name</label>
        <input asp-for="ModelView.FirstOrDefault().Name"/>
        <input type="submit" value="Filter"/>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <sort-header action="ModelsList" up="@Model.SortViewModel.Up" current="@Model.SortViewModel.Current"
                    property="@Model.SortViewModel.NameSort">Name</sort-header>
            </th>
            <th>Year</th>
             <th>
                <sort-header action="ModelsList" up="@Model.SortViewModel.Up" current="@Model.SortViewModel.Current"
                    property="@Model.SortViewModel.Mileage">Mileage</sort-header>
            </th>
            <th>Engine Volume</th>
            <th>Color</th>
            <th>Transmission</th>
            <th>Drive</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>        
@foreach (var item in Model.ModelView) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine_Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transmission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="EditModel" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteModel" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

