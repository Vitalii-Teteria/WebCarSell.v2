@using WebCarSell.Models;
@model ModelsListModel
@{
    ViewData["Title"] = "List";
}

<h1>All Announcements</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="ModelsList" asp-route-name="Name_Asc">Name</a>
                <a asp-action="ModelsList" asp-route-name="Name_Desc">Name desc</a>
            </th>
            <th>Year</th>
             <th>
               <a asp-action="ModelsList" asp-route-name="Mileage_Asc">Mileage</a>
                <a asp-action="ModelsList" asp-route-name="Mileage_Desc">Mileage desc</a>
            </th>
            <th>Engine Volume</th>
            <th>Color</th>
            <th>Transmission</th>
            <th>Drive</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>        
@foreach (var item in Model.ViewModels) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine_Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transmission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="EditModel" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteModel" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

