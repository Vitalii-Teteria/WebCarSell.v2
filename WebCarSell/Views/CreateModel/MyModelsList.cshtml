                                <div class="col">
                                    <label style="font-weight:bold">Picture</label>
                                </div>
                                <div class="col">
                                     
                                 @if (carmodel.Picture != null)
                                    {
                                        
                                        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@carmodel.Picture)" />
                                    }
                                </div>
                            </div>*@
                        </div>
                    }   
        </div>
  </div>
  
 