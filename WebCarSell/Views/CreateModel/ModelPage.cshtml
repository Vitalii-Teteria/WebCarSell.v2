@model ModelView

<div class="container" style="margin-top:50px">
    <div class="row justify-content-md-center">
        <div class="col-md-5  border text-center" style="padding-top:5%; padding-bottom:10%; font-weight:bold">
            <div class="row">
                <div class="col">
                    <label>Car Model:</label>

                </div>
                <div class="col">
                    <div>@Model.Name</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Model Year:</label>
                </div>
                <div class="col">
                    <div>@Model.Year</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Price:</label>
                </div>
                <div class="col">
                    <div>@Model.Price</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Mileage:</label>
                </div>
                <div class="col">
                    <div>@Model.Mileage</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Engine Volume:</label>
                </div>
                <div class="col">
                    <div>@Model.Engine_Volume</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Model Color:</label>
                </div>
                <div class="col">
                    <div>@Model.Color</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Transmission:</label>
                </div>
                <div class="col">
                    <div>@Model.Transmission</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Model Drive:</label>
                </div>
                <div class="col">
                    <div>@Model.Drive</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Owner Phone:</label>
                </div>
                <div class="col">
                    <div>@Model.OwnerPhone</div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Count of Modifications:</label>
                </div>
                <div class="col">
                    <div>@Model.CountOfModifications</div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Description:</label>
                    </div>
                    <div class="col">
                        <div>@Model.Description</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Summary Price Of Modifications:</label>
                </div>
                <div class="col">
                    <div>@Model.SummaryPriceOfModification</div>
                </div>
            </div>
        </div>
    </div>
</div>