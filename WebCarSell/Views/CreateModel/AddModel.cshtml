@model WebCarSell.Models.ModelView
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<title>Add a new car </title>

<h4 style="text-align:center; color:red; margin-top:30px;font-weight:bold">Add a new Car to our Store</h4>

<div class="container">
<div class="row justify-content-md-center">
    <div class="col-md-4" style="padding-top:5%; padding-bottom:10%">
        <form asp-action="AddModel"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <label asp-for="Name" class="control-label">Name</label>
                 <input asp-for="Name" class="form-control"/>
                 <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="Year" class="control-label">Year</label>
                 <input asp-for="Year" class="form-control"/>
                 <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="Mileage" class="control-label">Mileage</label>
                 <input asp-for="Mileage" class="form-control"/>
                 <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="Engine_Volume" class="control-label">Engine_Volume</label>
                 <input asp-for="Engine_Volume" class="form-control"/>
                 <span asp-validation-for="Engine_Volume" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="Color" class="control-label">Color</label>
                 <input asp-for="Color" class="form-control"/>
                 <span asp-validation-for="Color" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="Transmission" class="control-label">Transmission</label>
                 <input asp-for="Transmission" class="form-control"/>
                 <span asp-validation-for="Transmission" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="Drive" class="control-label">Drive</label>
                 <input asp-for="Drive" class="form-control"/>
                 <span asp-validation-for="Drive" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="Price" class="control-label">Price</label>
                 <input asp-for="Price" class="form-control"/>
                 <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="RegionId" class="control-label">Region</label>
                 <select asp-for="RegionId" required class="form-select" asp-items="ViewBag.Region"></select>
            </div>
            <div class="form-group">
                 <label asp-for="BrandId" class="control-label">Brand</label>
                 <select asp-for="BrandId" required class="form-select" asp-items="ViewBag.Brand"></select>
            </div>
            <div class="form-group">
                 <label asp-for="BodyId" class="control-label">Body</label>
                 <select asp-for="BodyId" required class="form-select" asp-items="ViewBag.Body"></select>
            </div> 
            <div class="form-group">
                <input type="submit" value="Add Car" class="btn btn-outline-danger" tabindex="-1" role="button" aria-disabled="true" style="font-weight: bold; margin-top:10px; margin-left:150px" />
            </div>
             <div class="form-group">
               <a class="btn btn-outline-danger" tabindex="-1" role="button" aria-disabled="true" style="font-weight: bold; margin-top:10px" asp-area="" asp-controller="Home" asp-action="EditModel">Edit Model</a>
            </div>
        </form>
     </div>
    </div>
</div>
