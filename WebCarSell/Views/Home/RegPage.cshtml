@{
    ViewData["Title"] = "RegPage";
}
 
@model RegisterModel


<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">  
<head>
    <meta charset="utf-8"/>
    <title>Login to WEBCarSell</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
    <style>
        body
        {
            background-color: white;
        }
        form
        {
            width: 450px;
            height: 450px;
            border-style: solid;
            border-width: 2px;
            border-color: white;
            position: fixed; top: 50%; left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
        .error
        {
            color: red;
            margin-left: 5px;
        }
        .labelStyle
        {
            text-align: center;
            font-size: 20px;
            font-family: Arial, Helvetica, sans-serif;
            color: red;
        }
    </style>
</head>
<body>
    <form asp-action="RegPage" class="border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="labelStyle" style="margin-bottom: 10px; margin-top: 10px; font-weight:bold;">Регистрация</label>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Логин (e-mail, телефон)</label>
                <input asp-for="Email" class="form-control" placeholder="Введите логин"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" placeholder="Введите Пароль"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Пароль</label>
                <input asp-for="Name" class="form-control" placeholder="Введите Свое Имя"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="SName" class="control-label">Пароль</label>
                <input asp-for="SName" class="form-control" placeholder="Введите Свою Фамилию"/>
                <span asp-validation-for="SName" class="text-danger"></span>
            </div>
            <div style="height: 10px;"></div>
            <div class="form-group">
            <input type="submit" value="Зарегистрироваться" class="btn btn-outline-danger" style="font-weight: bold; margin-top:10px; margin-left:120px; margin-bottom:30px" />          
            </div>
        </form>
</body>
</html>
