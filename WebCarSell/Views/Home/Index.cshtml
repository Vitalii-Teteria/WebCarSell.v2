@model OperationDataViewModel

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8"/>
    <title>WEBCarSell.com</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: white;
        }
        .error
        {
            color:red;
            margin-left: 5px;
        }
        label.error
        {
            display: inline;
        }
    </style>
</head>
<body>
    <h4 style="text-align:center; color:red; margin-top:30px;font-weight:bold; margin-bottom:20px">All Announcements</h4>

    <form id="main_form" class="form" role="form" method="post">
    <div class="container-xl" style="background-color:white;">
        <div class="row">          
            <div class="col" style="text-align: center;" >
                    @{
                        List<ModelView> models = new List<ModelView>();
                    }
                    @foreach(var carmodel in Model.ModelView)
                    {
                        <div class="container-fluid border">
                            <div class="row">
                                <div class="col">
                                    <label style="font-weight:bold">Car Model:</label>
                                </div>
                                <div class="col">
                                    <a asp-action="ModelPage" asp-controller="CreateModel" asp-route-id="@carmodel.Id">@carmodel.Name</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label style="font-weight:bold">Price:</label>
                                </div>
                                <div class="col">
                                   <div>@carmodel.Price</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label style="font-weight:bold">Color:</label>
                                </div>
                                <div class="col">
                                   <div>@carmodel.Color</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label style="font-weight:bold">Engine_Volume:</label>
                                </div>
                                <div class="col">
                                   <div>@carmodel.Engine_Volume</div>
                                </div>
                            </div>
                        </div>
                    }
            <div style="margin-top:20px">
                <ul class="pagination justify-content-center">     
                        @if (Model.PageViewModel.HasPreviousPage==true)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageViewModel.PageNumber-1)">Previous</a>
                            </li>
                        }
                        else
                        {
                            <a class="page-link">Previous</a>    
                        }
                        @if(Model.PageViewModel.HasNextPage==true)
                        {
                             <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageViewModel.PageNumber+1)">Next</a>
                             </li>
                        }
                        else
                        {
                             <a class="page-link">Next</a>    
                        }                   
                    </ul>
            </div>
            </div>
        </div>
    </div>
   </form>  
 </body>
</html>