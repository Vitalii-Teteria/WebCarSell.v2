@{
}

@using WebCarSell.Models;
@model CategoryList

<h1>All Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>        
@foreach (var item in Model.SportsCategories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>          
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

