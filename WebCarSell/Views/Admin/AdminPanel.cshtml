                <div class="col">
                    <label>Add a new Brand of Cars</label>
                </div>
                <div class="col">
                    <a class="btn btn-outline-danger" style="margin-left:120px" asp-area="" asp-controller="Admin" asp-action="AddBrand">Add Brand</a>
